	"type": "project",
	"authors": [
		{
			"name": "Ihor Budko",
			"email": "international.ihor@gmail.com",
			"role": "Developer",
			"homepage": "https://t.me/international_ihor"
		}
	],
	"require": {
		"php": ">=8",
		"vlucas/phpdotenv": "v5.*",
		
		"doctrine/migrations": "v3.*",
		"doctrine/orm": "v2.*",
		"doctrine/dbal": "v3.*",
        "symfony/yaml": "v5.*",
        "symfony/cache": "v6.*",

		"nikic/fast-route": "v1.*",
		"ronher/json-api": "v1.*"
	},
	"autoload": {
		"psr-4": {
			"App\\": "src/"
		},
		"psr-0": { "App\\Model\\": "src/Model" }
	},
	"scripts": {
        "post-update-cmd": [
        	"php bin/prepare",
        	"php bin/doctrine orm:schema-tool:update --force"
        ]
	}
}